<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical"
    android:visibility="gone"
    android:id="@+id/rly_one_type">
    <ImageView
        android:id="@+id/iv_one_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:background="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_one_type_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="#222222"
        android:text="逃税米"
        android:layout_below="@+id/iv_one_type"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_one_type_systematicname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="每日精选"
        android:textColor="#999999"
        android:layout_below="@+id/tv_one_type_content"
        android:textSize="13sp"/>
</RelativeLayout>
